{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="container">
        <div class="row">
            <div class="col mb-4">
                <h1>Inscription</h1>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.codepostal) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    <div class="mt-3">
                        {{ form_row(registrationForm.RGPDConsent) }}
                    </div> 
                                  
                    <button type="submit" class="btn btn-primary btn-lg mt-2">M'inscrire</button>
                    <a class="btn btn-secondary btn-lg mt-2" href="{{ path('app_login') }}">Me connecter</a>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>

{% endblock %}
